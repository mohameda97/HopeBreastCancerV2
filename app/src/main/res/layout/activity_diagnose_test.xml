<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".updateUserInfo">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


            <TextView
                android:text="Texture_worst: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:inputType="numberDecimal"
                android:id="@+id/texture_worst"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />


            <TextView
                android:text="radius_se: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/radius_se"
                android:inputType="numberDecimal"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />

            <TextView
                android:text="radius_worst: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:inputType="numberDecimal"
                android:id="@+id/radius_worst"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />


            <TextView
                android:text="area_se: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:inputType="numberDecimal"
                android:id="@+id/area_se"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />


            <TextView
                android:text="area_worst: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:inputType="numberDecimal"
                android:id="@+id/area_worst"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />


            <TextView
                android:text="concave_points_mean: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText

                android:inputType="numberDecimal"
                android:id="@+id/concave_points_mean"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />


            <TextView
                android:text="concave_points_worst: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:inputType="numberDecimal"
                android:id="@+id/concave_points_worst"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />


            <TextView
                android:text="Result: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText

                android:id="@+id/diagnoseTestResult"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />



    <Button
        android:id="@+id/btDiagnoseTest"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test" />
    <Button
        android:id="@+id/btReturnDiagnoseTest"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Return" />

</LinearLayout>
</ScrollView>