<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".updateUserInfo">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

            <TextView
                android:text="Have you ever had breast cancer or received radiation therapy to your chest ?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/q1"
                android:layout_width="250dp"
                android:layout_height="wrap_content" />



            <TextView
                android:text="Have you ever been tested positive for breast cancer genes BRCA1 or BRCA2 ? "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/q2"
                android:layout_width="250dp"
                android:layout_height="wrap_content" />


            <TextView
                android:text="Whatâ€™s your age ?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/q3"
                android:layout_width="250dp"
                android:layout_height="wrap_content" />


            <TextView
                android:text="At what age did your menstrual periods start ? "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/q4"
                android:layout_width="250dp"
                android:layout_height="wrap_content" />


            <TextView
                android:text="What was your age when you had your first baby ?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/q5"
                android:layout_width="250dp"
                android:layout_height="wrap_content" />



            <TextView
                android:text="How many of your blood relatives have had breast cancer ? "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/q6"
                android:layout_width="250dp"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Have you ever had a breast biopsy ? "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/q7"
                android:layout_width="250dp"
                android:layout_height="wrap_content" />
        <TextView
            android:text="If so, how many times ? "
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" />
        <EditText
             android:id="@+id/q8"
             android:layout_width="250dp"
             android:layout_height="wrap_content" />
        <TextView
             android:text="Did any of them show a typical hyperplasia in  the report ? "
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" />
        <EditText
             android:id="@+id/q9"
             android:layout_width="250dp"
             android:layout_height="wrap_content" />

            <TextView
                android:text="Result: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/riskTestResult"
                android:layout_width="250dp"
                android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btRiskTest"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test" />
    <Button
        android:id="@+id/btReturnRiskTest"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Return" />
</LinearLayout>
    </ScrollView>